include ../buttons/buttons

mixin review(options)

  -const {head, date, description, path,
  -typeOfButton, numberOfLikes, modifier}=options

  section(class=['review',
  `${modifier ? `review_${modifier}`:''}`])
    img.review__icon(src=path alt='фото аватар')
    h3.review__name #{head}
    span.review__date #{date}

    div.review__wrapper
      +buttons({type: typeOfButton, content: numberOfLikes})
      p.review__description #{description}
