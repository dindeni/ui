mixin sum-rooms
  -const rooms = ['спальни', 'кровати', 'ванные комнаты']
  -const roomsModifier = ['bedroom', 'beds', 'bathroom']
  div.sum-rooms
    +ui-input('dropdown', '0 спальни, 0 кровати...', 'ui-input__field_for-rooms js-ui-input__field_for-rooms')
    div.sum-rooms__popup.sum-rooms__popup_hide
      div.sum-rooms__count-container
      each value, index in rooms
        div.sum-rooms__container
          span.sum-rooms__type-visitors #{value}
          div.sum-rooms__number-of-visitors-wrapper
            button(type='button' class='sum-rooms__button sum-rooms__button_minus') -
            span.sum-rooms__number-of-visitors(class=`sum-rooms__number-of-visitors_${roomsModifier[index]}`) 0
            button(type='button' class='sum-rooms__button sum-rooms__button_plus') +
