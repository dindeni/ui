include ../inputs/inputs
include ../copyright/copyright

mixin list(listHead, items, className)
  div.footer-widget__footerList.footer-list(class=`footerList_${className}`)
    h3.footer-list__head #{listHead}
    ul.footer-list__list
      each item in items
        li.footer-list__item
          a.footer-list__link(href='#') #{item}

mixin footerWidget(description, headNavigation, navigationItems, headAbout,aboutItems, headSupport, supportItems, headSubscribe, subscribeDescription, placeholderEmail, copyrightText, classModifier)
  footer(class= classModifier ? `footer-widget ${classModifier}`: 'footer-widget')
    div.footer-widget__logo-wrapper
      img.footer-widget__logo(src=require('./blocks/common/icon-logo.svg') alt='image logo')
      p.footer-widget__description #{description}
    +list(headNavigation, navigationItems, 'navigation')
    +list(headAbout, aboutItems, 'about')
    +list(headSupport, supportItems, 'support')
    div.footer-widget__subscribe-wrapper
      h3.footer-widget__subscribe-head #{headSubscribe}
      div.footer-widget__subscribe-description #{subscribeDescription}
      +input('subscription', placeholderEmail)
    +copyright(copyrightText)




