include ../sum-guests/sum-guests
include ../ui-slider/ui-slider
include ../checkbox-set/checkbox-set
include ../card-room/card-room
include ../sum-rooms/sum-rooms
include ../ui-datepicker/ui-datepicker

-
  const panelData = require('../blocks/side-panel/side-panel.json');
  
  const { standard, rich, expandable } = panelData;

mixin side-panel

  section.side-panel
    div.side-panel__slogan даты пребывания в отеле

    form.side-panel__form

      div.side-panel__datepicker-wrapper
        +ui-datepicker({type: 'range', defaultDate: '19 авг - 23 авг', modifierForLabel: 'for-filter'})

      div.side-panel__sum-guests-wrapper
        +sum-guests({modifier: 'for-filter', modifierForInput: 'for-filter',
         modifierForLabel: 'for-filter', head: 'гости'})

      div.side-panel__slogan.side-panel__slogan_type_range диапазон цены
      +ui-slider('for-side-panel')
      div.side-panel__range-reference Стоимость за сутки пребывания в номере

      div.side-panel__slogan.side-panel__slogan_type_checkbox Checkbox Buttons
      div.side-panel__checkbox-wrapper
        +checkbox-set({values: standard})

      div.side-panel__slogan.side-panel__slogan_type_checkbox-rich доступность
      +checkbox-set({values: rich.values, descriptions: rich.descriptions})

      div.side-panel__slogan.side-panel__slogan_type_rooms удобства номера
      div.side-panel__sum-rooms-wrapper
        +sum-rooms
      
      +checkbox-set({values: expandable, isExpandable: true, head: 'дополнительные удобства'})
