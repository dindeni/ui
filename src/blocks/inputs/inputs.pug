mixin input(type, placeholder, className)
  if type === 'text'
    input(type='text' class=`input input__text` placeholder=`${placeholder}`)
  else if type === 'dropdown'
    label.input__label-dropdown
      input(type='text' class='input input__dropdown' placeholder=`${placeholder}` readonly)
  else if type === 'masked'
    input(type='text' class='input input__masked' placeholder=`${placeholder}`)
  else if type === 'date'
      input(type='text' class=`input input__date ${className}`  placeholder=`${placeholder}`)
  else if type === 'filter'
    label.input__label-dropdown
      input(type='text' class='input input__filter' placeholder=`${placeholder}`)
    input(type='text' class='input input__filter-hide hide')
  else if type === 'subscription'
    label.input__label-subscription
      input(type='text' class='input input__subscription' placeholder=`${placeholder}`)
  else if type === 'password'
    input(type='password' class=`input input__text` placeholder=`${placeholder}`)