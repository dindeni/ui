mixin pagination()

  -const {valueForPagination, modifierForPagination}=attributes

  div(class=['pagination',
  `${modifierForPagination ? `pagination_${modifierForPagination}`:''}`])

    ul.pagination__list
      each value, index in valueForPagination

        if index <= 2
          li.pagination__item
            a.pagination__link(href='somePage.html') #{index+1}

        else if index === 3
          li.pagination__item.pagination__item_dots
            a.pagination__link(href='somePage.html') ...

        else if index === valueForPagination.length-1
          li.pagination__item.pagination__item
            a.pagination__link(href='somePage.html') #{index+1}
          li.pagination__item.pagination__item_next
            a.pagination__link(href='somePage.html')

    div.pagination__description 1 – 12 из 100+ вариантов аренды
