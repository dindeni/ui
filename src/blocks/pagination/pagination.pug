mixin pagination(value)

  div.pagination

    ul.pagination__list
      each arrayItem, index in Array(value)
        
        if index === 3
          li.pagination__item.pagination__item_dots
            a.pagination__link(href="somePage.html") ...
        else if index < 3 || index === value - 1
          li.pagination__item
            a.pagination__link(class= `${index === 0 ? `pagination__link_first-element` : ''}`
             href="somePage.html")=index + 1
      li.pagination__item.pagination__item_type_next
            a.pagination__link.pagination__link_type_next(href="somePage.html")
       
    div.pagination__description 1 – 12 из 100+ вариантов аренды
