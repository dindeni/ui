mixin pagination(options)

  -const {value, modifier}=options

  div(class=['pagination',
  `${modifier ? `pagination_${modifier}`:''}`])

    ul.pagination__list
      -for(let i = 0; i <= value; i+=1){
        if i <= 2
          li.pagination__item
            a.pagination__link(href='somePage.html') #{i + 1}
        else if i === 3
          li.pagination__item.pagination__item_dots
            a.pagination__link(href='somePage.html') ...
        else if i === value
          li.pagination__item.pagination__item
            a.pagination__link(href='somePage.html') #{i}
          li.pagination__item.pagination__item_next
            a.pagination__link(href='somePage.html')
      -}

    div.pagination__description 1 – 12 из 100+ вариантов аренды
