include ../buttons/buttons

mixin navigation(options)

  -const {type, items, modifierForItems, loginName, registrationName,
  -linkModifier, userName} = options

  if type === 'standart'
    nav.navigation.js-navigation
      img.navigation__logo(src=require('../img/icon-logo.svg') alt='logo')

      ul.navigation__list.js-navigation__list
        each item, index in items
          li(class=['navigation__item',
           `${modifierForItems ? `navigation__item_${modifierForItems}`:''}`])
            a(href='somePage.html' class=['navigation__link',
            `${linkModifier[index] ?
             `navigation__link_${linkModifier[index]}`:''}`]) #{item}

      div.navigation__buttons-wrapper
        +buttons({type:'bordering-link', content: `${loginName}`, link:'sign-in.html'})
        +buttons({type:'full-link', content:`${registrationName}`, link: 'registration.html', modifier:'for-navigation'})
        button.navigation__button-mobile.js-navigation__button-mobile

  else if type === 'loggedIn'
    nav.navigation.js-navigation.navigation_logged
      img.navigation__logo(src=require('../img/icon-logo.svg') alt='logo')

      ul.navigation__list.js-navigation__list
        each item, index in items
          li.navigation__item
            a(href='somePage.html' class=['navigation__link',
             `${linkModifier[index] ?
               `navigation__link_${linkModifier[index]}` : ''}`]) #{item}

      em.navigation__user-name #{userName}

      div.navigation__buttons-wrapper
        button.navigation__button-mobile.js-navigation__button-mobile
