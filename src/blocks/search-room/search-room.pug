include ../sum-guests/sum-guests
include ../form-element/form-element

mixin searchRoom(absolute)

  section(class=['search-room',
  `${absolute ? 'search-room_absolute':''}`])
    h2.search-room__head Найдём номера под ваши пожелания

    div.search-room__check
      div.search-room__label-wrapper
        span.search-room__label прибытие
        span.search-room__label выезд

      form.search-room__form

        +form-element()(typeOfForm='date' placeholderForForm='дд.мм.гггг' modifierForInput='for-search-in'
         modifierForLabel='for-search' jsModifierForInput='for-search-in')

        +form-element()(typeOfForm='date' placeholderForForm='дд.мм.гггг' modifierForInput='for-search-out'
          modifierForLabel='for-search' jsModifierForInput='for-search-out')

        +sum-guests
        +buttons()(typeOfButtons='buy' contentOfButtons='Подобрать номер' modifierForButtons='for-search')
