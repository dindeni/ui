mixin radio(options)

  -
    const {values, id, modifier}=options;

    const classModifier = modifier ? `radio_${modifier}` : '';

  div.radio(class=classModifier)

    each value, index in values
      input.radio__field(type="radio" name="radio" id=`${id[index]}` checked=index===0 )
      label.radio__mark(for=`${id[index]}`)=value
