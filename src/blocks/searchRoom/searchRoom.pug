  include ../inputs/inputs

mixin searchRoom
  section.searchRoom
    h2.searchRoom__head Найдём номера под ваши пожелания
    div.searchRoom__check
      div
        span.searchRoom__label прибытие
        span.searchRoom__label выезд
      form
        +input('date', 'дд.мм.гггг', 'datepickerIn')
        +input('date', 'дд.мм.гггг', 'datepickerOut')
        +sumGuests('guests')
    +buttons('buy', 'Подобрать номер')