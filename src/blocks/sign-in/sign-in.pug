include ../form-element/form-element
include ../button/button

mixin sign-in

  section.sign-in
    h1.sign-in__head Войти

    +form-element({type: 'text', placeholder: 'Email',
      modifierForInput: 'for-sign-in'})

    +form-element({type: 'password', placeholder: 'Пароль',
      modifierForInput: 'for-sign-in'})

    +button({type: 'buy', content: 'Войти', linkModifier: 'for-sign-in'})

    span.sign-in__label Нет аккаунта на Toxin?
      +button({type: 'bordering-link', content: 'Создать', link: 'registration.html', linkModifier: 'for-sign-in'})
