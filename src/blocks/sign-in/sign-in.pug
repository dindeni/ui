include ../form-element/form-element
include ../ui-control/ui-control

mixin sign-in

  section.sign-in
    h1.sign-in__head Войти

    +form-element({type: 'text', placeholder: 'Email',
      modifierForInput: 'for-sign-in'})

    +form-element({type: 'password', placeholder: 'Пароль',
      modifierForInput: 'for-sign-in'})

    span.sign-in__link-enter-wrapper
      +ui-control({content: 'Войти', link: 'sign-in.html', linkModifier: 'for-sign-in'})

    span.sign-in__label Нет аккаунта на Toxin?
      span.sign-in__link-wrapper
        +ui-control({isBorder: true, content: 'Создать', link: 'registration.html', linkModifier: 'for-sign-in'})
