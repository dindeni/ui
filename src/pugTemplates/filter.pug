doctype html
html(lang="en")

  head
    meta(charset="utf-8")
    link(rel="apple-touch-icon" sizes="180x180" href="./favicons/apple-touch-icon.png")
    link(rel="icon" type="image/png" sizes="32x32" href="./favicons/favicon-32x32.png")
    link( rel="icon" type="image/png" sizes="16x16" href="./favicons/favicon-16x16.png")
    link(rel="manifest" href="./favicons/site.webmanifest")
    link(rel="mask-icon" href="./favicons/safari-pinned-tab.svg" color="#5bbad5")
    meta(name="msapplication-TileColor" content="#da532c")
    meta(name="theme-color" content="#ffffff")
    title hotel
    meta(name="viewport" content="width=device-width,initial-scale=1")

  body

    header.main-filter__header
      +navigation()(typeForNavigation='standart' itemsForNavigation=arrIndexNavigation.items navigationLogin='войти'
        navigationRegistration='зарегистрироваться' navigationLinkModifier=arrIndexNavigation.modifier,
        modifierForNavigationItems='ru')

    main.main-filter

      +side-panel

      section.main-filter__rooms
        h1.main-filter__rooms-head Номера, которые мы для вас подобрали
        each value in rooms
          +card-room()(cardImages=value.images cardRadioName='room-radio-name'
          typeOfRoom=value.type numberOfRoom=value.number roomPrice=value.price
            cardNumberOfReviews=value.review cardNumberOfRate=value.rate
            cardModifier='for-filter')

        +pagination()(valueForPagination=Array(15) modifierForPagination='for-filter')

    +footer-widget()(footerWidgetDescription=footerdata.description footerWidgetHeadNavigation=footerdata.headNavigation
      footerWidgetNavigationItems=footerdata.navigationItems footerWidgetHeadAbout=footerdata.headAbout
      footerWidgetAboutItems=footerdata.aboutItems footerWidgetHeadSupport=footerdata.headSupport
      footerWidgetSupportItems=footerdata.supportItems footerWidgetHeadSubscribe=footerdata.headSubscribe
      footerWidgetSubscribeDescription=footerdata.subscribeDescription footerWidgetPlaceholderEmail=footerdata.placeholderEmail
      footerWidgetCopyrightText=footerdata.copyrightText)
