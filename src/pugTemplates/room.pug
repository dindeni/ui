include ../blocks/navigation/navigation
include ../blocks/footer-widget/footer-widget
include ../blocks/footer/footer
include ../blocks/room-description/room-description


-const navigationValues = {items: ['О нас', 'Услуги', 'Вакансии', 'Новости', 'Соглашения'],
-linkModifier: [ , 'expand-ru', ,  , 'expand-ru']}

-const footerData = {description: 'Бронирование номеров в лучшем отеле 2019 года по версии ассоциации «Отельные взгляды»',
-headNavigation: 'навигация', navigationItems: ['О нас', 'Новости', 'Служба поддержки',
-'Услуги'], headAbout: 'о нас', aboutItems: ['О сервисе', 'Наша команда', 'Вакансии',
- 'Инвесторы'], headSupport: 'Служба поддержки', supportItems: ['Соглашения',
- 'Сообщества', 'Связь с нами'], headSubscribe: 'Подписка', subscribeDescription:
-'Получайте специальные предложения и новости сервиса', placeholderEmail: 'Email',
-copyrightText: 'Copyright © 2018 Toxin отель. Все права зачищены.'}

doctype html
html(lang="en")

  head
    meta(charset="utf-8")
    link(rel="apple-touch-icon" sizes="180x180" href="./favicons/apple-touch-icon.png")
    link(rel="icon" type="image/png" sizes="32x32" href="./favicons/favicon-32x32.png")
    link( rel="icon" type="image/png" sizes="16x16" href="./favicons/favicon-16x16.png")
    link(rel="manifest" href="./favicons/site.webmanifest")
    link(rel="mask-icon" href="./favicons/safari-pinned-tab.svg" color="#5bbad5")
    meta(name="msapplication-TileColor" content="#da532c")
    meta(name="theme-color" content="#ffffff")
    title hotel
    meta(name="viewport" content="width=device-width,initial-scale=1")

  body

    +navigation(Object.assign(navigationValues, {
      type: 'standart', loginName: 'войти',
      registrationName: 'зарегистрироваться', modifierForItems: 'ru'
    }))

    main.main-room

      div.main-room__image-wrapper
        img(src=roomDetailPath[0] alt='room image').main-room__image
        div.main-room__images-aside
          each image, index in roomDetailPath
            if index > 0
              img(src=image alt='room image').main-room__image
      +room-description

    +footer-widget(footerData)

