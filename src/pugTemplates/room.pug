include ../blocks/navigation/navigation
include ../blocks/footer-widget/footer-widget
include ../blocks/footer/footer
include ../blocks/main-room/main-room

-
  const data = require('./data.json');
  const { navigation, footer } = data;

doctype html
html(lang='en')

  head
    meta(charset='utf-8')
    link(rel='apple-touch-icon' sizes='180x180' href=require('../favicons/apple-touch-icon.png'))
    link(rel='icon' type='image/png' sizes='42x42' href=require('../favicons/favicon-32x32.png'))
    link( rel='icon' type='image/png' sizes='16x16' href=require('../favicons/favicon-16x16.png'))
    link(rel='manifest' href=require('../favicons/site.webmanifest'))
    link(rel='mask-icon' href=require('../favicons/safari-pinned-tab.svg') color='#5bbad5')
    meta(name='msapplication-TileColor' content='#da532c')
    meta(name='theme-color' content='#ffffff')
    title hotel
    meta(name='viewport' content='width=device-width,initial-scale=1')

  body

    +navigation(navigation)

    +main-room

    +footer-widget(footer)

