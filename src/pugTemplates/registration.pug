    header
      +navigation('standart', arrIndexNavigation.items, arrIndexNavigation.classes, 'войти', 'зарегистрироваться', undefined, 'navigation__item_ru')

    main.main-registration
      +registration

    +footer-widget(footerdata.description, footerdata.headNavigation, footerdata.navigationItems,
      footerdata.headAbout, footerdata.aboutItems, footerdata.headSupport,
      footerdata.supportItems, footerdata.headSubscribe, footerdata.subscribeDescription,
      footerdata.placeholderEmail, footerdata.copyrightText, 'footer-widget_for-registration', 'footer-list_for-registration',
      'copyright_for-registration copyright_footer-widget', 'social-buttons_for-registration')
