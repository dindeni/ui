include ../blocks/navBar/navBar
include ../blocks/search-room/search-room
include ../blocks/footerWidget/footerWidget
include ../blocks/footer/footer

-const arrIndexNavigation = {items: ['О нас', 'Услуги', 'Вакансии', 'Новости', 'Соглашения'],
-classes: ['nav-standart__link', 'nav-standart__link nav-standart__link_expand nav-standart__link_expand-ru',
-'nav-standart__link', 'nav-standart__link', 'nav-standart__link nav-standart__link_expand nav-standart__link_expand-ru']}
-const footerdata = {description: 'Бронирование номеров в лучшем отеле 2019 года по версии ассоциации «Отельные взгляды»',
-headNavigation: 'навигация', navigationItems: ['О нас', 'Новости', 'Служба поддержки',
-'Услуги'], headAbout: 'о нас', aboutItems: ['О сервисе', 'Наша команда', 'Вакансии',
- 'Инвесторы'], headSupport: 'Служба поддержки', supportItems: ['Соглашения',
- 'Сообщества', 'Связь с нами'], headSubscribe: 'Подписка', subscribeDescription:
-'Получайте специальные предложения и новости сервиса', placeholderEmail: 'Email',
-copyrightText: 'Copyright © 2018 Toxin отель. Все права зачищены.'}

doctype html
html(lang="ru")
  head
    meta(charset="utf-8")
    link(rel="apple-touch-icon" sizes="180x180" href="./favicons/apple-touch-icon.png")
    link(rel="icon" type="image/png" sizes="42x42" href="./favicons/favicon-32x32.png")
    link( rel="icon" type="image/png" sizes="16x16" href="./favicons/favicon-16x16.png")
    link(rel="manifest" href="./favicons/site.webmanifest")
    link(rel="mask-icon" href="./favicons/safari-pinned-tab.svg" color="#5bbad5")
    meta(name="msapplication-TileColor" content="#da532c")
    meta(name="theme-color" content="#ffffff")
    title hotel
    meta(name="viewport" content="width=device-width,initial-scale=1")
  body
    header
      +navBar('standart', arrIndexNavigation.items, arrIndexNavigation.classes, 'войти', 'зарегистрироваться', undefined, 'nav-standart__item_ru')
    main.main-index
      img(class='main-index__background' src=require('../img/image-back-1.jpg'))
      span.main-index__slogan Лучшие номера для вашей работы, отдыха и просто вдохновения
      +searchRoom(true)
    +footerWidget(footerdata.description, footerdata.headNavigation, footerdata.navigationItems,
    footerdata.headAbout, footerdata.aboutItems, footerdata.headSupport,
      footerdata.supportItems, footerdata.headSubscribe, footerdata.subscribeDescription,
    footerdata.placeholderEmail, footerdata.copyrightText)
