doctype html
html(lang="en")
  head
    title UI
    meta(name="viewport" content="width=device-width,initial-scale=1")
  body

    div.main-ui__form
      div.main-ui__form-wrapper
        +form-element()(typeOfForm='text' placeholderForForm='email' modifierForLabel='for-main-ui')
        +form-element()(typeOfForm='dropdown' placeholderForForm='Сколько гостей' modifierForLabel='for-main-ui')
        +form-element()(typeOfForm='masked' placeholderForForm='дд.мм.гггг' modifierForLabel='for-main-ui')
        +form-element()(typeOfForm='date' placeholderForForm='дд.мм.гггг' modifierForLabel='for-main-ui')
        +form-element()(typeOfForm='filter' placeholderForForm='19 авг - 23 авг' modifierForLabel='for-main-ui')
        +form-element()(typeOfForm='subscription' placeholderForForm='email' modifierForLabel='for-main-ui')

      div.main-ui__form-wrapper
        +checkbox()(checkboxValue=arrCheckbox typeOfCheckbox='checkbox')
        +radio()(valueForRadio=arrRadio radioId=arrRadioId)
        +toggle()(toggleLabel='Получать спецпредложение' toggleId='toggle')

        div.main-ui__buttons-wrapper
          +buttons()(typeOfButtons='like-gray' contentOfButtons=2  modifierForButtons='for-ui')
          +buttons()(typeOfButtons='like' contentOfButtons=12)

        div.main-ui__rate-wrapper
          +rate()(numberFillStars=4)
          +rate()(numberFillStars=5)

      div.main-ui__form-wrapper

        div.main-ui__range-wrapper
          +ui-slider

        div.main-ui__buttons-wrapper
          +buttons()(typeOfButtons='full' contentOfButtons='click me')

        div.main-ui__buttons-wrapper
          +buttons()(typeOfButtons='bordering' contentOfButtons='click me')

        div.main-ui__buttons-wrapper
          +buttons()(typeOfButtons='transparent' contentOfButtons='click me')

        div.main-ui__buttons-wrapper
          +buttons()(typeOfButtons='buy' contentOfButtons='перейти к оплате')
        +pagination()(valueForPagination=Array(15))

      div.main-ui__form-wrapper
        div.main-ui__checkbox-wrapper
          +checkbox(checkboxValue=arrCheckboxExpandable
          typeOfCheckbox='checkboxExpandable' headOfCheckbox='expandable checkbox list')

      div.main-ui__form-wrapper
        +checkbox()(checkboxValue=arrCheckboxRich typeOfCheckbox='rich')

      div.main-ui__form-wrapper
        +bullet-list()(valuesForList=arrBulletList)

      div.main-ui__form-wrapper.main-ui__form-wrapper_review
        +features()(featuresValue=arrFeatures)

        +review()(reviewHead='Мурад Сарафанов' reviewDate='5 дней назад'
          reviewDescription='Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.'
          reviewPath=require('../blocks/review/icon-avatar-1.png')
          reviewNumberOfLikes=12 reviewTypeOfButton='like')


    div.main-ui__cards

      div.main-ui__card-wrapper
        +searchRoom
        +registration('registration_for-main-ui')

      div.main-ui__card-wrapper
        +order-room()(totalValueForOrder=arrTotalDesc totalPriceForOrder=arrTotalPrice)
        +sign-in

      div.main-ui__card-wrapper

        +card-room()(cardImages=arrPathImage1 cardRadioName='room-radio-name-1'
          typeOfRoom='luxe' numberOfRoom=888 roomPrice='9 900'
          cardNumberOfReviews=145 cardNumberOfRate=5)

        +card-room()(cardImages=arrPathImage2 cardRadioName='room-radio-name-2'
        typeOfRoom='normal' numberOfRoom=840 roomPrice='9 900'
          cardNumberOfReviews=65 cardNumberOfRate=4)

    div.main-ui__headers-footers

      +navigation()(typeForNavigation='standart' itemsForNavigation=uiNavBarItems.items navigationLogin='login'
        navigationRegistration='register' navigationLinkModifier=uiNavBarItems.linkModifier)
      +navigation()(typeForNavigation='loggedIn' itemsForNavigation=uiNavBarItems.items
        navigationLinkModifier=uiNavBarItems.linkModifier navigationUserName='Cosmin Negoita')

      +footer
      +footer-widget()(footerWidgetDescription=footerWidgetData.description footerWidgetHeadNavigation='Navigation'
        footerWidgetNavigationItems=footerWidgetData.navigation footerWidgetHeadAbout='ABOUT US'
        footerWidgetAboutItems=footerWidgetData.about footerWidgetHeadSupport='support'
        footerWidgetSupportItems=footerWidgetData.support footerWidgetHeadSubscribe='Subscribe to our newsletter'
        footerWidgetSubscribeDescription=footerWidgetData.subscribe footerWidgetPlaceholderEmail='Your email address'
        footerWidgetCopyrightText='Copyright © 2018 Toxin UI Kit. All rights reserved.')
