doctype html
html(lang="en")
    head
      title UI
      meta(name="viewport" content="width=device-width,initial-scale=1")
    body
      +searchRoom
      div.ui-container
        +buttons('full', 'click me')
        +buttons('bordering', 'click me')
        +buttons('transparent', 'click me')
        +buttons('buy', 'перейти к оплате')
        +buttons('like', 12)
        +buttons('like-gray', 2)
      div.container
        +input('text', 'email', 'input__email')
        +input('dropdown', 'Сколько гостей', 'input-dropdown')
        +input('masked', 'дд.мм.гггг')
        +input('date', 'дд.мм.гггг')
        +input('filter', '19 авг - 23 авг')
        +input('subscription', 'email')
      div.ui-container
        +checkbox(arrCheckbox, 'checkbox')
      div.ui-container
        +checkbox(arrCheckboxExpandable, 'checkboxExpandable', 'expandable checkbox list')
      div.ui-container
        +checkbox(arrCheckboxRich, 'rich')
      div.ui-container
        +radio(arrRadio, arrRadioId)
      div.ui-container
        +toggle('Получать спецпредложение', 'toggle')
      div.ui-container
        +range
      div.ui-container
        +pagination(Array(15))
      div.ui-container
        +rate(4)
      div.ui-container
        +sumGuests('rooms')
      div.ui-container
        +bulletList(arrBulletList)
      div.ui-container
        +review('Мурад Сарафанов', '5 дней назад',
            'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.',
            require('./blocks/review/icon-avatar-1.png'), 'like', 12)
      div.ui-container
        +features(arrFeatures)
      div.ui-container
        +registration
      div.ui-container
        +signIn
      div.ui-container
        +orderRoom(arrTotalDesc, arrTotalPrice)
      div.ui-container
        +cardRoom(arrPathImage, 'room-radio-name-1', 'romId1', 'luxe', 888,
        '9 900', 145, 5)
      div.ui-container
        +navBar('standart', uiNavBarItems.items, uiNavBarItems.classes, 'login', 'register')
      div.ui-container
        +navBar('loggedIn', uiNavBarItems.items, uiNavBarItems.classes,'login', 'register', 'Cosmin Negoita')
      div.ui-container
        +copyright('Copyright © 2018 Toxin UI Kit. All rights reserved.')
      div.ui-container
        +footer
      div.ui-container
        +footerWidget(footerWidgetData.description, 'Navigation',
            footerWidgetData.navigation, 'ABOUT US', footerWidgetData.about, 'support',
        footerWidgetData.support, 'Subscribe to our newsletter',
            footerWidgetData.subscribe, 'Your email address')




